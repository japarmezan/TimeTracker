<div class="jumbotron">
  <h1>Welcome to Trackus Maximus!</h1>
  <h3>Please, first log in:</h3>
  <small class="text-danger"><%= flash[:alert] %></small>
  </br></br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

    <div class="form-group">
      <%= f.label :email, :class=>"col-sm-1 control-label" %>
      <div class="col-sm-5">
        <%= f.email_field :email, :class => "form-control", autofocus: true %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password, :class=>"col-sm-1 control-label" %>
      <div class="col-sm-5">
        <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="col-md-offset-1">
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      </br>

      <div class="actions">
        <%= f.submit "Log in", :class => "btn btn-primary btn-lg" %>
      </div>
      </br>

    </div>
  <% end %>

    <%= render "devise/shared/links" %>
</div>

