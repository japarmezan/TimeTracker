<!DOCTYPE html>
<html>
<head>
  <title>Timetracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
        <%= link_to 'Trackus Maximus', projects_path, :class=>"navbar-brand", :style=>"font-family: 'Fredericka the Great', Helvetica, Arial, sans-serif;" %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        </div>
         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  		     <ul class="nav navbar-nav">

          <% if user_signed_in? %>
  	        <li><%= link_to 'Your projects', projects_path %></li>
            <li><%= link_to 'Collaboration', projects_collaborate_path %></li>
            <li><%= link_to 'Invoices', invoices_path %></li>
            <li><%= link_to 'Charts', charts_path %></li>
            <li><%= link_to 'Categories', categories_path %></li>
          <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>                
              <%= link_to(current_user.email, edit_user_registration_path)  %>
              </li>
              <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
              </li>
            <% else %>
              <li>
              <%= link_to('Login', new_user_session_path)  %>  
              </li>
            <% end %>
          </ul>
        </div>
    </div>
</nav>


<div class="container  body-content">
	<%= yield %>
</div>

</body>
</html>
