<%= print_notice(flash) %>

<h1>Listing Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-pencil lead" aria-hidden="true"></span>'.html_safe, edit_category_path(category) if category.user_id == current_user.id %> </td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash lead" aria-hidden="true"></span>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } if category.user_id == current_user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => "btn btn-primary" %>
